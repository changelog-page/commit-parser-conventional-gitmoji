{
    "name": "basecode/commit-parse",
    "description": "Commit message parsing according to known standards.",
    "keywords": [
        "basecode",
        "commit",
        "parse",
        "git",
        "github",
        "gitlab"
    ],
    "homepage": "https://github.com/basecodecompany/commit-parse",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@basecode.sh",
            "homepage": "https://basecode.sh",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "changelog/commit-parser": "^0.1.0",
        "illuminate/support": "^9.0",
        "spatie/data-transfer-object": "^3.7",
        "spatie/regex": "^3.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Changelog\\CommitParser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Changelog\\CommitParser\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/php-cs-fixer fix ./"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
